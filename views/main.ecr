<html>
  <%= header %>
  <body>
    <h1>toasterator</h1>
    <a class="link" href="/shutdown">Shutdown</a>
    <br />
    <a class="link" href="/exitmc">Exit Minecraft</a>
    <br />
    <a class="link" href="/logout">Logout</a>
    <br />
    <a class="link" href="/reboot">Reboot</a>
    <br />
    <a class="link" href="/blockmc">Block Minecraft</a>
    <br />
    <a class="link" href="/unblockmc">Unblock Minecraft</a>
    <br />

    <!--<a class="link" href="/disable">Disable</a>-->
    <!--<br>-->
    <!--<a class="link" href="/enable">Enable</a>-->

    <style>
      body {
        text-align: center;
        font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        margin-top: 30px;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
      }

      .link {
        display: inline-block;
        margin: 25px 10px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        text-decoration: none;
        color: #333;
        background-color: #fff;
        font-size: medium;
      }

      .link:hover {
        background-color: #eee;
      }

      .text-input {
        display: inline-block;
        margin: 10px 0px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        text-decoration: none;
        background-color: #fff;
        font-size: medium;
        width: 150px;
      }

      .text-input:disabled {
        background-color: #eee;
      }

      table {
        margin: 0 auto;
      }

      td {
        padding: 10px 5px;
      }

      table {
        border-spacing: 0;
        border: 1px solid #ddd;
      }

      .longer-text {
        width: 300px !important;
        max-width: 40vw;
      }
    </style>
    <script>
      function clearAllElements() {
        document.querySelector('body').innerHTML = 'Unauthorized'
      }

      if (prompt("Enter password") !== "2525") {
        clearAllElements()
      }
    </script>
  </body>
</html>
